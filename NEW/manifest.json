{
	"manifest_version": 2,
	"name": "Facebook Gaming Layout Controller",
	"description": "Facebook Gaming Layout Controller",
	"version": "1.0",
	"icons": {"128": "images/BlueWhite/Icon.128x128.png", "16": "images/BlueWhite/Icon.16x16.png", "48": "images/BlueWhite/Icon.48x48.png"},
	"permissions": ["activeTab", "storage", "tabs"],
	"options_page": "views/options.html",
	"options_ui": {"page": "views/options.html", "chrome_style": true},

	"browser_action": {"default_title": "Bonus Collector", "default_icon": "images/BonusLogo_128x128.png", "default_popup": "views/popup.html"},
	"background": {"page": "views/background.html"},
	"content_scripts": [
		{"all_frames": true, "run_at": "document_start", "js": ["scripts/content.js"], "matches": ["*://apps.facebook.com/*"]},
	]
}
